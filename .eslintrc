{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": [
    "eslint-config-airbnb-base"
  ],
  "globals": {
    "artifacts": true,
    "contract": true,
    "assert": true,
    "web3": true
  },
  "env": {
    "es6": true,
    "mocha": true
  },
  "rules": {
    "semi": ["error", "never"],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-cond-assign": "off",
    "no-await-in-loop": "off",
    "no-plusplus": "off",
    "import/prefer-default-export": "off",
    "indent": ["error", 2]
  }
}
